@model InvoiceReport

@{
    ViewData["Title"] = "Informe de Facturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title">@ViewData["Title"]</h1>
<div class="sep"></div>

<link rel="stylesheet" href="~/css/mainbody.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
<link href="~/css/Tables.css" rel="stylesheet" />

<script src="~/js/Tables.js"></script>

<div class="row">
    <form class="form-x" asp-controller="Reports" asp-action="FilterInvoice" method="post" enctype="multipart/form-data">
        <div class="row" id="content_data">
            <label class="col-2 control-label">Fecha de facturación desde</label>
            <div class="col-3 demo-section k-content" id="ppp">
                <div id="dtpickerSelect">
                    <input type="date" value="" asp-for="DateFilters.From" />
                </div>
            </div>
            <label class="col-2 control-label">Fecha de facturación hasta</label>
            <div class="col-3 demo-section k-content" id="ppp">
                <div id="dtpickerSelect">
                    <input type="date" value="" asp-for="DateFilters.To" />
                </div>
            </div>
        </div>
        <div class="row" id="content_data" style="margin-top:20px;">
            <div class="col-10" style="text-align:right">
                <button type="button" id="button-cancel-filters" class="btn btn-default" onclick="javascript:window.location.reload(false);">
                    Cancelar
                </button>
            </div>
            <div class="col-2" style="text-align:right">
                <button class="btn btn-primary" id="button-apply-filters" type="submit">
                    Aplicar filtros
                </button>
            </div>
        </div>
    </form>
</div>

<div class="sep"></div>

<table id="dataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" style="margin-top:100px;">
    <thead>
        <tr>
            <th class="th-sm">
                ID factura

            </th>
            <th class="th-sm">
                Fecha factura

            </th>
            <th class="th-sm">
                Precio

            </th>
            <th class="th-sm">
                Moneda

            </th>
            <th class="th-sm">
                Comprador europeo

            </th>
            <th class="th-sm">
                ID comprador

            </th>
            <th class="th-sm">
                Nombre

            </th>
            <th class="th-sm">
                País

            </th>
            <th class="th-sm">
                Ciudad

            </th>
            <th class="th-sm">
                Dirección

            </th>
            <th class="th-sm">
                CP

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var element in Model.Elements)
        {
            <tr>
                <td>@element.Id</td>
                <td>@element.InvoiceDate</td>
                <td>@element.Price</td>
                <td>@element.Currency</td>
                <td>@element.BuyerEU</td>
                <td>@element.BuyerID</td>
                <td>@element.BuyerName</td>
                <td>@element.BuyerCountry</td>
                <td>@element.BuyerCity</td>
                <td>@element.BuyerAddress</td>
                <td>@element.BuyerZipCode</td>
                @*<td>button para los seriales</td>*@
            </tr>
        }
    </tbody>
</table>

<style>

    input {
        font-size:20px;
    }

</style>
